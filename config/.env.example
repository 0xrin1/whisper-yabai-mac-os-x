# Whisper Voice Control Configuration

# Hotkey settings
VOICE_CONTROL_HOTKEY=ctrl+shift+space
VOICE_DICTATION_HOTKEY=ctrl+shift+d

# Whisper model size (tiny, base, small, medium, large)
# Smaller models are faster but less accurate
# Larger models are more accurate but require more resources
WHISPER_MODEL_SIZE=base

# Recording settings
RECORDING_DURATION=5
MIN_CONFIDENCE=0.5
NOISE_THRESHOLD=0.2

# LLM Settings for natural language command interpretation
USE_LLM=true
LLM_MODEL_PATH=models/tinyllama-1.1b-chat-v1.0.Q4_K_M.gguf
LLM_THREADS=4